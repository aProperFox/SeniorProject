<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inherentgames"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application 
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        
        <activity android:name="com.inherentgames.MenuScreen"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            
	        <intent-filter>
	            <action android:name="android.intent.action.MAIN" />
	            <category android:name="android.intent.category.LAUNCHER"/>
	        </intent-filter>
        </activity>
        
        <activity android:name="com.inherentgames.VideoScreen"
             android:label="@string/app_name"
             android:screenOrientation="landscape">
	        <meta-data android:name="android.support.PARENT_ACTIVITY"
            android:value="com.inherentgames.VideoScreen" />
		</activity>
        
        <activity android:name="com.inherentgames.GameScreen"
            android:label="@string/app_name"
            android:screenOrientation="landscape">    
	        <meta-data android:name="android.support.PARENT_ACTIVITY"
            android:value="com.inherentgames.GameScreen" />
        </activity>
        
        <activity android:name="com.inherentgames.SelectMap"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
	        <meta-data android:name="android.support.PARENT_ACTIVITY"
            android:value="com.inherentgames.SelectMap" />
        </activity>
        
        <activity android:name="com.inherentgames.Tutorial"
             android:label="@string/app_name"
             android:screenOrientation="landscape">
		</activity>
		
        <activity android:name="com.inherentgames.Settings"
             android:label="@string/app_name"
             android:screenOrientation="landscape">
		</activity>
		
        <activity android:name="com.inherentgames.Store"
             android:label="@string/app_name"
             android:screenOrientation="landscape">
		</activity>
		
        <activity android:name="com.inherentgames.Popup"
             android:label="@string/app_name"
             android:screenOrientation="landscape">
		</activity>
		
        <activity android:name="com.inherentgames.LoadingScreen"
             android:label="@string/app_name"
             android:screenOrientation="landscape">
		</activity>
		
    </application>

</manifest>
